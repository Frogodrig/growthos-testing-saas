# ──────────────────────────────────────────────
# Database
# ──────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/growthos

# ──────────────────────────────────────────────
# Redis
# ──────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ──────────────────────────────────────────────
# Auth
# ──────────────────────────────────────────────
JWT_SECRET=change-this-to-a-secure-random-string

# ──────────────────────────────────────────────
# AI (Google Gemini API)
# ──────────────────────────────────────────────
GEMINI_API_KEY=your-gemini-api-key-here

# ──────────────────────────────────────────────
# SaaS Ports
# ──────────────────────────────────────────────
BOOKER_PORT=3001
LEADQUALIFIER_PORT=3002
FOLLOWUP_PORT=3003

# ──────────────────────────────────────────────
# Scheduler
# ──────────────────────────────────────────────
POLL_INTERVAL_MS=60000

# ──────────────────────────────────────────────
# Email (Resend)
# ──────────────────────────────────────────────
RESEND_API_KEY=re_your-resend-api-key-here

# ──────────────────────────────────────────────
# Calendar (Google Calendar API)
# ──────────────────────────────────────────────
GOOGLE_CALENDAR_CREDENTIALS={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# ──────────────────────────────────────────────
# Billing (Stripe)
# ──────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here
STRIPE_PRICE_ID_BOOKER=price_your-booker-price-id
STRIPE_PRICE_ID_LEADQUALIFIER=price_your-leadqualifier-price-id
STRIPE_PRICE_ID_FOLLOWUP=price_your-followup-price-id

# ──────────────────────────────────────────────
# Payment Mode (manual|stripe, default: stripe)
# When 'manual': Stripe activation bypassed, tenants start as 'pending',
# admin activates via POST /internal/activate-tenant with ADMIN_SECRET header.
# When 'stripe': Full Stripe subscription lifecycle (existing behavior).
# ──────────────────────────────────────────────
PAYMENT_MODE=stripe
ADMIN_SECRET=change-this-to-a-secure-random-string
